@model List<MovieModel>
@{
    if(Model != null)
    {
        foreach (MovieModel m in Model)
        {
            <h1>@m.Title</h1>
            <h2>Genre: @m.Genre</h2>
            <p>Rating: @m.imdbRating</p>
            <p>Actors: @m.Actors </p>
            <img src="@m.Poster"></img>
        }
    }
}



